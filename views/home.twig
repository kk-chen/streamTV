{% include 'header.twig' with { 'pageTitle' : pageTitle}  %}

<br><h3>
  
{% if user != '' %}
	<a href="/streamTV/search">Search For A Show Or Actor By Name</a><br>
	<a href='/streamTV/queue'>View Your Queued Shows</a><br>
	<a href="/streamTV/logout">Logout {{user}}</a><br>
{% else %}
	<a href="/streamTV/search">Search For A Show Or Actor By Name</a><br>
	<a href="/streamTV/register">Register As A New Customer</a><br>
	<a href="/streamTV/login">Login To Your Account</a><br>
{% endif %}	<h3>
